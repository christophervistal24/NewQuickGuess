<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/ui_bg"
    >


        <ImageView
            android:id="@+id/tarshier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:contentDescription="@null"
            android:layout_marginStart="-40dp"
            android:src="@drawable/tarshier" />

   <ImageView
            android:id="@+id/dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@null"
            android:layout_marginEnd="-40dp"
            android:src="@drawable/dog" />

    <ImageView
        android:id="@+id/tiger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="117dp"
        android:layout_marginLeft="-50dp"
        android:contentDescription="@null"
        android:src="@drawable/tiger" />


    <ImageView
        android:id="@+id/lion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:contentDescription="@null"
        android:layout_marginEnd="-58dp"
        android:layout_below="@+id/dog"
        android:src="@drawable/lion" />


    <ImageView
        android:id="@+id/unknown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="204dp"
        android:layout_marginStart="-88dp"
        android:contentDescription="@null"
        android:src="@drawable/unknown" />


    <ImageView
        android:id="@+id/mouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:contentDescription="@null"
        android:layout_below="@+id/lion"
        android:layout_marginEnd="-90dp"
        android:src="@drawable/mouse" />

    <ImageView
        android:id="@+id/monkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mouse"
        android:contentDescription="@null"
        android:layout_marginLeft="-60dp"
        android:src="@drawable/monkey" />

    <ImageView
        android:id="@+id/unknown2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:contentDescription="@null"
        android:layout_marginEnd="-50dp"
        android:layout_below="@+id/mouse"
        android:src="@drawable/unknown2" />




</RelativeLayout>