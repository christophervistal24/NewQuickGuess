<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/simple_bg"
    android:id="@+id/mainLayout"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGO HERE"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="#707070"
            android:fontFamily="@font/font_roboto"
            android:id="@+id/logo"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Quick Guess"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="#707070"
            android:fontFamily="@font/font_roboto"
            android:id="@+id/dialogTitle"/>

        <TextView
            android:textColor="#707070"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It's free and hardly takes more than 30 seconds"
            android:fontFamily="@font/font_roboto_regular"
            android:id="@+id/description"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/welcomeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:id="@+id/usernameLayout"
            android:orientation="vertical"
           >


                <EditText
                    android:id="@+id/username"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_width="285dp"
                    android:layout_height="55dp"
                    android:hint="@string/your_username"
                    android:textColorHint="#707070"
                    android:inputType="text"
                    android:background="@drawable/rounded_corner"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="#707070"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_roboto"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernameLayout"
            android:padding="2dp"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/createUser"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corner_3"
                android:text="C R E A T E"
                android:textColor="#ffffff"
                android:fontFamily="@font/font_roboto"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </RelativeLayout>

    <!--fragments-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_one" />

    <FrameLayout
        android:id="@+id/fragment_quit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>




