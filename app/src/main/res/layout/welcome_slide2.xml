<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/two_layout"
   >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/step_2"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/wolfy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-80dp"
        android:layout_marginStart="-70dp"
        android:src="@drawable/ola"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/two_child_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:orientation="vertical">

        <com.dragankrstic.autotypetextview.AutoTypeTextView
            android:visibility="gone"
            android:id="@+id/message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textAlignment="center"
            attv:typingSpeed="80"
            android:textColor="#707070"
            android:padding="20dp"
            android:background="@drawable/rounded_corner"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>
</RelativeLayout>