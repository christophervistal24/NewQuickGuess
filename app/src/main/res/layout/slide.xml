<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/slidelinearlayout">


    <ImageView
        android:id="@+id/pageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:maxHeight="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/cat_people" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNoOfAnswered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/answered"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="35sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/leftArrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="38dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:maxHeight="0dp"
                android:scaleType="centerInside"
                android:src="@null" />

            <ImageView
                android:id="@+id/rightArrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="37dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:maxHeight="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/right" />
        </RelativeLayout>

        <Button
            android:id="@+id/easyLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/easy_level"
           />

        <Button
            android:id="@+id/moderateLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/moderate_level"
            />

        <Button
            android:id="@+id/difficultLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/difficult_level"
            />

    </LinearLayout>


</RelativeLayout>