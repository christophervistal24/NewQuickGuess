<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:clickable="true"
    android:layout_weight="1"
    tools:context=".MenuFragment"
    android:focusable="true">





    <RelativeLayout
        android:layout_marginTop="4dp"
        android:id="@+id/LifeAndPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">



        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/heart_life"
            android:layout_alignParentStart="true"
            />


      <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/userLife"
            android:textSize="30sp"
            android:layout_marginStart="60dp"
            android:layout_alignParentStart="true"
            android:text="5"
            android:fontFamily="@font/dimbo_regular"
            android:textColor="#707070"
            android:gravity="center"
            android:textStyle="bold"
            />




        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/points"
            android:layout_alignParentEnd="true"
            />


       <TextView
           android:id="@+id/userPoints"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:textSize="30sp"
           android:textStyle="bold"
           android:textColor="#707070"
           android:layout_alignParentEnd="true"
           android:gravity="center"
           android:layout_marginEnd="45dp"
           android:text="0"
           android:fontFamily="@font/dimbo_regular"
            />

    </RelativeLayout>


    <ImageView
        android:layout_below="@+id/LifeAndPoints"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/title"
        android:scaleType="fitXY"
        android:layout_height="230dp" />


    <LinearLayout
        android:id="@+id/userLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:fontFamily="@font/dimbo_regular"
            android:textColor="#fff"
            android:textStyle="bold"
            android:shadowColor="#c6991f"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/categories"
        android:layout_centerInParent="true"
        android:layout_below="@id/userLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <ImageButton
            android:id="@+id/btnAbout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/info"
            android:scaleType="centerInside" />

        <Button
            android:visibility="gone"
            android:id="@+id/channel1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Notify"
            android:scaleType="centerInside" />


        <ImageButton
            android:id="@+id/btnCategories"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/play_btn2"
            android:scaleType="centerInside"
           />



        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/settings"
            android:scaleType="centerInside" />

    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/categories"
        android:id="@+id/ranks"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnRanks"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/leaderboard_btn" />
    </LinearLayout>











</RelativeLayout>