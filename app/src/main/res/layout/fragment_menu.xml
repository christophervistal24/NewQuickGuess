<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".MenuFragment"
    android:background="#FAF9FF"
    android:focusable="true">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/body"
        tools:ignore="ContentDescription" />

    <!--REMOVE THE VISIBILITY GONE -->
    <RelativeLayout
        android:id="@+id/LifeAndPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_margin_horizontal2"
            android:layout_marginTop="@dimen/card_margin_horizontal2"
            android:layout_marginRight="@dimen/card_margin_horizontal2"
            android:background="@drawable/header"
            tools:ignore="ContentDescription" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"

                android:src="@drawable/avatar" />

            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_roboto"
                    android:text="Name"
                    android:textColor="#707070"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/userLife"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_roboto_medium"
                    android:text="Life  : 5"
                    android:textColor="#707070"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/userPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_roboto_medium"
                    android:text="Points : 0"
                    android:textColor="#707070"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/categories"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <!--TEMPORARY MARGIN TOP -->
        <Button
            android:id="@+id/btnCategories"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_2"
            android:fontFamily="@font/font_roboto"
            android:padding="20dp"
            android:text="@string/play_string"
            android:textColor="#7C72FF"

            />

    </LinearLayout>


    <!-- Bottom Navigation Layout-->
    <LinearLayout
        android:id="@+id/layout_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:orientation="vertical">

        <android.support.design.widget.BottomNavigationView

            android:id="@+id/bottomNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-45dp"
            android:layout_marginRight="-45dp"
            android:layout_marginBottom="-35dp"
            android:background="@drawable/footer_bg"
            android:theme="@style/NavigationView"
            app:menu="@menu/bottom_navigation" />

    </LinearLayout>
</RelativeLayout>